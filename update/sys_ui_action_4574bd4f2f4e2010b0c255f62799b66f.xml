        <order>100</order>
        <script><![CDATA[var seeds = new GlideRecord("u_employee_file");  
seeds.u_related_to_case = current.sys_id; //this line copies the HR Case number and adds to the "Related to case" 

seeds.u_employee = current.u_related_contact;

var gr = new GlideRecord('sys_attachment');
    gr.addQuery('table_sys_id',current.sys_id);
    gr.query();
    while (gr.next()) {
		seeds.u_document_name=gr.file_name;
		seeds.u_format=gr.content_type;
		//gs.log("name of attachment is "+gr.file_name);
	//gs.log("format of attachment is "+gr.content_type);
	
		
	}

var sysID = seeds.insert();  
GlideSysAttachment.copy('sn_hr_core_case', current.sys_id, 'u_employee_file', sysID);  
current.u_reference = sysID;  

var mySysID = current.update();  
gs.addInfoMessage("SEEDS record " + seeds.u_number + " created for this HR case");  
action.setRedirectURL(seeds);  
action.setReturnURL(current);  
]]></script>
